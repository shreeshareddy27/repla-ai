{
  "manifest_version": 3,
  "name": "AI Email Assistant",
  "version": "1.0",
  "description": "Generate AI email replies",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:3001/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
